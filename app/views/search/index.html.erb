<div class="text-center"><h1>Search Results</h1></div>

<div class="row">
<% @items.each do |item| %>
  <div class="col-md-3">
    <p class="text-center"><%= image_tag item.image_path %></p>
    <h3 class="text-center"><%= item.title %></h3>
    <p class="text-center">$<%= item.price %></p>
    <p class="text-center"><%= item.description %></p>
  </div>
<% end %>
</div>
