<div class="panel panel-primary">
  <h1 class="text-center">Login</h1>
</div>

<div class="panel panel-primary">


  <%= form_for(:session, url: login_path) do |f| %>
  <br>
  <div class="container">
    <%= f.label :username, "Username" %>
    <%= f.text_field :username, placeholder: "Enter Username", class: "text-center form-control" %>
    <br>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, placeholder: "Enter Password", class: "text-center form-control" %>
    <br>
    <%= f.submit "Login", class: "btn btn-default btn-block" %>
    <% end %>

    <br>
    <p>
      <p><%= link_to "Create Account", new_user_path, class: "btn btn-default btn-block" %></p>
    </div>
  </div>
