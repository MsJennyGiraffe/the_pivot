<% @sellers.each do |seller| %>
<div class="well col-md-3 col-md-offset-1">
  <h3 class="text-center"><%= link_to "#{seller.username}", seller_path(user_slug: seller.slug) %></h3>
  <%=h truncate(seller.description, :length => 55) %>
  <%= link_to "View Shop", seller_path(seller.slug), class: "btn btn-default btn-block" %>
</div>
<% end %>
