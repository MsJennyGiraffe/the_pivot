<div class="panel panel-primary">
  <h1 class="text-center">Create Item</h1>
</div>

<div class="well well-xs">

<%= form_for [:admin, @item] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
<br>
  <%= f.label :price %>
  <%= f.text_field :price, class: "form-control" %>
<br>
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
<br>
  <%= f.label :image_path %>
  <%= f.text_field :image_path, class: "form-control" %>
<br>

  <%= f.select(:category_id) do %>

  <%= options_for_select(@categories) %>

  <% end %>
<br>
  <%= f.label :weight %>
  <%= f.text_field :weight, class: "form-control" %>
<br>
  <%= f.label :stock %>
  <%= f.text_field :stock, class: "form-control" %>
<br>
  <%= f.submit %>
<% end %>

</div>
