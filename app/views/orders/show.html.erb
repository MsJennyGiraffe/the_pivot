
<h1>Order Number <%= @order.id %></h1>
<div>
  <div class="container">
    <table class="table table-striped">
      <th>Item</th>
      <th>Quantity</th>
      <th>Total Weight</th>
      <th>Total Price</th>
      <% @order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.title %> </td>
        <td><%= order_item.quantity %> </td>
        <td><%= order_item.item.subtotal_weight %> </td>
        <td><%= order_item.item.subtotal_price %> </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
