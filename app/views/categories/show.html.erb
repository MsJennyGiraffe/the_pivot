  <div class="panel pane-body">
    <h1 class="text-center"><%= @category.title.capitalize %></h1><br>
  </div>

<div class="row">
  <div class="container col-md-8">
    <% @category.items.each do |item| %>

    <div class="media">
      <div class="media-left .pull-left">
        <%= image_tag item.image_path, :class => "media-object"%>
      </div>
      <div class="media-body .pull-right">
        <div class="panel panel-body">
            <h3 id="title" class="media-heading"><%=link_to item.title, item_path(item) %></h3>
            <div id="description"><%= item.description %></div>
            <hr>
            <div id="weight">Item Weight: <%= item.weight %>lbs</div>
            <hr>
            <div id="price"><strong>Unit Price: $<%= item.price %></strong></div>
            <hr>
        </div>
      </div>
    <div class="media-right .pull-right">
      <div><%= link_to "Add to Cart", cart_path(id: item.id), class: "btn btn-primary btn-lg active", method: :post %></div>
    </div>
    <% end %>
  </div>
</div>
