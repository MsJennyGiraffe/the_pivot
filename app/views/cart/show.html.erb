<% if @cart.nil? %>
No current items
<% else %>
<% quantity_range = 1..20 %>

<h2 class="text-center">Cart items: </h2>
<br>

<div class="row">
  <div class="container col-md-8">
    <% @cart_items.each do |cart_item| %>

    <div class="media">
      <div class="media-left .pull-left">
        <%= image_tag cart_item.image_path, :class => "media-object"%>
      </div>
      <div class="media-body .pull-right">
        <h3 id="title" class="media-heading"><%=link_to cart_item.title, cart_path(cart_item) %></h3>
        <div id="description"><%= cart_item.description %></div>
        <div id="weight">Weight: <%= cart_item.weight %>lbs</div>
        <div id="price"><strong>$<%= cart_item.price %></strong></div>
      </div>
      <div class="media-right .pull-right">
        <button class="btn btn-primary active" type="button"><%= link_to "Remove", cart_path(id: cart_item.id), method: :delete %></button>
        
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle active" type="button" data-toggle="dropdown">Quantity
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <% quantity_range.each do |quantity| %>
              <li><%= link_to quantity, cart_path(id: cart_item.id, quantity: quantity), method: :patch %></li>
              <% end %>
            </ul>
          </div>
      </div>
        <% end %>
      </div>
    </div>


    <br>
    Total Price: <%= @cart.total_price %>
    <br>
    Weight Total: <%= @cart.total_weight %>
    <br>
    <% end %>
