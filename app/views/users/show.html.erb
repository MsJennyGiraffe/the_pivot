<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Profile Information</a></li>
    <li><a href="#tabs-2">Items for Sale</a></li>
    <li><a href="#tabs-3">Previous Orders</a></li>
  </ul>
  <div id="tabs-1">
    <div class="panel panel-primary">
      <h1 class="text-center">User Dashboard</h1>
    </div>

    <div class="panel panel-primary">
      <p class="text-center"><strong>Welcome <%= current_user.username  %></strong></p>
      <p class="text-center">Email: <%= current_user.email %> </p>
    </div>
  </div>
  <div id="tabs-2">
    <%= current_user.username %>'s items for sale:
    <% current_user.items.each do |item| %>
    <div class="row">
      <div class="container col-md-8 col-md-offset-2">
        <h3 class="text-center"> <%=link_to item.title, user_item_path(user_slug: item.user.slug, id: item.id) %></h3>
        <div class="text-center"><%= item.description %></div>
        <form>
          <div class="form-group">
            <label for="bid">Current Bid: <%= item.starting_bid %></label>
            <input type="text" class="form-control" id="bid">
          </div>
        </form>
          <div class="text-center", id="bid"><%= link_to "Bid", cart_path(id: item, type: "bid"), class: "btn btn-primary btn-lg active", method: :post %></div>
          <% if item.buyout_price %>
          <div class="text-center"> Buyout Price: <%= item.buyout_price %> </div>
          <div class="text-center", id="buyout"><%= link_to "Snap it Up", cart_path(id: item.id, type: "buyout"), class: "btn btn-primary btn-lg active", method: :post %></div>
          <% end %>
        </div>
      </div>
      <% end %>
  </div>
  <div id="tabs-3">
    Previous Orders:
    <% current_user.orders.each do |order| %>
    <div class="well">
      <div class="container">
        <h1 class="text-center">Order Number <%= order.id %></h1>
        <div>
          <div class=" table-responsive">
          <table class="table table-bordered table-striped">
            <thead>
              <th>Item</th>
              <th>Quantity</th>
              <th>Price/Unit</th>
              <th>Total Price</th>
              <% order.order_items.each do |order_item| %>
              <tr>
                <td> <%= order_item.item.title %> </td>
              </tr>
              <% end %>
            </thead>
          </table>
        </div>
      </div>
    </div>
    </div>
    <% end %>
  </div>
</div>
<%= button_to "Add Item", new_user_item_path(current_user.slug),  method: :get %>
