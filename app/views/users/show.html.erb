<% if @user.role == "default" %>
  <%= link_to "Apply to Become Seller", request_path, method: :put %>
<% end %>
<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Profile Information</a></li>
    <% if @user.approved %>
    <li><a href="#tabs-2">Items for Sale</a></li>
    <% end %>
    <li><a href="#tabs-3">Previous Orders</a></li>
  </ul>
  <div id="tabs-1">
    <div class="panel panel-primary">
      <h1 class="text-center">User Dashboard</h1>
    </div>

    <div class="panel panel-primary">
      <p class="text-center"><strong>Welcome <%= @user.username  %></strong></p>
      <p class="text-center">Email: <%= @user.email %> </p>
    </div>
  </div>
  <% if @user.approved %>
  <div id="tabs-2">
    <%= @user.username %>'s items for sale:
    <% @user.items.each do |item| %>
    <% if item.active? %>
    <div class="row">
      <div class="container col-md-8 col-md-offset-2">
        <h3 class="text-center"> <%=link_to item.title, user_item_path(user_slug: item.user.slug, id: item.id) %></h3>
        <div class="text-center"><%= item.description %></div>
        <form>
          <div class="form-group">
            <label for="bid">Current Bid: <%= item.starting_bid %></label>
            <input type="text" class="form-control" id="bid">
          </div>
        </form>
        <div class="text-center", id="bid"><%= link_to "Bid", cart_path(id: item, type: "bid"), class: "btn btn-primary btn-lg active", method: :post %></div>
        <% if item.buyout_price %>
        <div class="text-center"> Buyout Price: <%= item.buyout_price %> </div>
        <div class="text-center", id="buyout"><%= link_to "Snap it Up", cart_path(id: item.id, type: "buyout"), class: "btn btn-primary btn-lg active", method: :post %></div>
        <% end %>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
  <% end %>
  <div id="tabs-3">
    <div class="panel panel-primary">
      <h1 class="text-center">Your Orders</h1>
      <div>
          <div class="panel panel-primary">
          <table class="table table-bordered table-striped table-responsive col-md">
            <th>Order Number</th>
            <th></th>
            <% @user.orders.each do |order| %>
            <tr>
              <td><%= order.id %> </td>
              <td><%= link_to "View Order", order_path(order) %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</br>
<% if @user.approved %>
<%= button_to "Add Item", new_user_item_path(@user.slug),  method: :get, class: "btn btn-primary"%>
<%= button_to "My Seller Page", seller_path(@user.slug), method: :get, class: "btn btn-primary" %>
<% end %>
