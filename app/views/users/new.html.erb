<div class="panel panel-primary">
  <h1 class="text-center"> Create New Account</h1>
</div>


  <div class="panel panel-primary">
    <%= form_for(@user) do |f| %>
    <%= f.label :username, "Username", class: "text-center" %>
    <%= f.text_field :username, placeholder: "Enter Username", class: "text-center form-control" %>
  <br>
    <%= f.label :email, "Email", class: "text-center" %>
    <%= f.text_field :email, placeholder: "Enter E-mail", class: "text-center form-control" %>
  <br>
    <%= f.label :password, "Password", class: "text-center" %>
    <%= f.password_field :password, placeholder: "Enter Password", class: "text-center form-control" %>
  <br>
    <%= f.submit "Create Account", class: "btn btn-default btn-block" %>
  <br>
  <% end %>
  </div>
